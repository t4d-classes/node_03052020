{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.15",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "nodemon": "^2.0.2"
  },
  "scripts": {
    "start": "babel-node ./src/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "debug": "babel-node --inspect-brk ./src/index.js",
    "build": "babel src --out-dir ./dist"
  },
  "nodemonConfig": {
    "ignore": [
      "db.json"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0"
  },
  "babel": {
    "plugins": ["@babel/plugin-proposal-nullish-coalescing-operator"]
  },  
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "env": {
      "node": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "tabWidth": 2
        }
      ]
    }
  }
}
